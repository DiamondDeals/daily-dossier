# Reddit API Credentials
# Get these from https://www.reddit.com/prefs/apps
REDDIT_CLIENT_ID=your_reddit_client_id_here
REDDIT_CLIENT_SECRET=your_reddit_client_secret_here
REDDIT_USER_AGENT=PersonalizedReddit/1.0.0 by YourUsername

# Optional: For script-type applications (less secure)
# REDDIT_USERNAME=your_reddit_username
# REDDIT_PASSWORD=your_reddit_password

# OAuth2 Configuration
REDDIT_REDIRECT_URI=http://localhost:8080/callback
REDDIT_SCOPES=identity,edit,flair,history,modconfig,modflair,modlog,modposts,modwiki,mysubreddits,privatemessages,read,report,save,submit,subscribe,vote,wikiedit,wikiread

# API Rate Limiting
MAX_REQUESTS_PER_MINUTE=60
MAX_REQUESTS_PER_HOUR=3600
BURST_LIMIT=10
COOLDOWN_SECONDS=1
RETRY_ATTEMPTS=3
BACKOFF_FACTOR=2.0

# Caching Configuration
CACHE_ENABLED=true
CACHE_TTL_SECONDS=300
CACHE_MAX_SIZE_MB=100
CACHE_CLEANUP_INTERVAL_HOURS=24

# Database Configuration
DATABASE_URL=sqlite:///personalized_reddit.db
DATABASE_BACKUP_ENABLED=true
DATABASE_BACKUP_INTERVAL_HOURS=24
DATABASE_MAX_CONNECTIONS=10
DATABASE_CONNECTION_TIMEOUT=30

# Application Settings
DEBUG=false
LOG_LEVEL=INFO
EXPORT_DIRECTORY=./Exports
TEMP_DIRECTORY=./temp
THREAD_POOL_SIZE=5
MAX_CONCURRENT_REQUESTS=3
REQUEST_TIMEOUT_SECONDS=30
AUTO_CLEANUP_ENABLED=true
AUTO_CLEANUP_DAYS=90